<style>
    nav {
        display: flex;
        align-items: center;
        justify-content: center;

        padding: 16px;
    }
    .container {
        background: rgb(92, 92, 92);
        border-radius: 100px;

        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;

        padding: 5px;
        width: 28.5rem;
    }
    .profile {
        display: block;

        height: 35px;
        width: 35px;

        background-color: var(--white);
        border-radius: 50%;
    }
    ul {
        display: flex;
        align-items: center;
        gap: 20px;
        
    }
    ul li a {
        color: var(--light-grey);
    }
    ul li a:hover {
        color: var(--white);
    }
    ul li a:active {
        color: var(--white);
    }
    .container button {
        color: var(--light-grey);
        border: none;
        border-radius: 24px;
        padding: 10px 30px;
        font-family: "Spline Sans", sans-serif;
      
        background-color: var(--grey);
    }
    .container button:hover {
        color: var(--white);
        background-color: var(--dark);
    }
</style>
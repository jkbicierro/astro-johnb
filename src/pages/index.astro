---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Hero2 from "../components/Hero2.astro";
import Header from "../components/Header.astro";
import Project from "../components/Showcase.astro";
import BottomBar from "../components/BottomBar.astro";
---

<Layout pageName="Home">
    <main>
        <Header/>
        <Hero/>
        <Hero2/>
        <Project/>
    
        <div class="botbar-container">
            <BottomBar/>
        </div>
    </main>
</Layout>

<style>
    main {
        margin: 350px 0;
        gap: 350px;
        display: flex;
        flex-direction: column;
        
    }
    .botbar-container {
        position: fixed;
        bottom: 0;
        right: 0;
        margin: 0 30px 30px 0;
    }
</style>